<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversalConnector.Views.Connector">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Entry Text="{Binding Ip, Mode=TwoWay}" FontSize="Medium" />
            <Entry Text="{Binding Port, Mode=TwoWay}" FontSize="Medium" Grid.Row="1"/>

            <Button Text="Connect" Command="{Binding OpenSocketCommand}"  Grid.Row="3"/>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>