<Page x:Class="MyAsistent.Windows.AddVoiceCommandxaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyAsistent.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="160" d:DesignWidth="500"
      Title="Voice Command">
    <GroupBox Header="Голос">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="240*"/>
                <RowDefinition Height="148*"/>
            </Grid.RowDefinitions>
            <TextBox Name="Argumets" Grid.Row="1" Margin="2,2,2,2"></TextBox>
            <TextBlock Text="Голос" FontSize="19" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="50"/>
            <Button Content="OK" Margin="5 5 5 5" Click="Button_Click" Grid.Row="2"></Button>
        </Grid>
    </GroupBox>

</Page>
